/*tiny scrolbar */
#scrollbar1 { width: 170px; clear: both; margin: 0px 0 0px; }
#scrollbar1 .viewport { width: 157px; height: 166px; overflow: hidden; position: relative; }
#scrollbar1 .overview { list-style: none; position: absolute; left: 0; top: 0; }
#scrollbar1 .thumb .end,
#scrollbar1 .thumb { background-color: #000; }
#scrollbar1 .scrollbar { position: relative; float: right; width: 11px; }
#scrollbar1 .track { background-color: #474747 !important; height: 100%; width:9px; position: relative; padding: 0 1px; }
#scrollbar1 .thumb { height: 20px; width: 9px; cursor: pointer; overflow: hidden; position: absolute; top: 0; }
#scrollbar1 .thumb .end { overflow: hidden; height: 5px; width: 9px; }
#scrollbar1 .disable{ display: none; }
.noSelect { user-select: none; -o-user-select: none; -moz-user-select: none; -khtml-user-select: none; -webkit-user-select: none; }

