.footer-nav li {
	float:left;
	list-style:none;
	font-family: proxima-nova, Verdana,Arial,sans-serif;
	font-size: 11px !important;
	background: #33444E !important;
	border: 1px solid #4B5860;
	font-weight: normal;
	z-index: 900;
}
.footer-nav li:hover,
.footer-nav li.active {
	background-color:#121212;
}
.footer-nav li:hover a {
	
}
.footer-nav li a {
	font-family: proxima-nova, Verdana,Arial,sans-serif;
	font-size:12px;
	text-decoration: none;
	padding: 0px 15px 15px 25px !important;
	line-height: 26px;
	display:block;
}

.footer-nav li .dropup {
/*padding-right:40px;*/
	background: url("/css/images/arrow.png") no-repeat 127px 11px !important;
	border: 1px solid #4B5860;	
	width: 166px !important;
}

.footer-nav li .footer_dropup {
	position: absolute;
	/*padding:15px 0px 0px 0px;*/
	margin: 0 0 0 0px;
	left:-9999em;
	bottom: 42px; /* Equal height of the footer */
	z-index: 999;
	
}
.footer-nav li:hover .footer_dropup  {
	left:auto;
}
.footer-nav .footer-nav_home a {
	padding-top:0;
}
