/*
 * CSS Styles that are needed by jScrollPane for it to operate correctly.
 *
 * Include this stylesheet in your site or copy and paste the styles below into your stylesheet - jScrollPane
 * may not operate correctly without them.
 */

.jspContainer
{
	overflow: hidden;
	position: relative;
}

.jspPane
{
	position: absolute;
}

.jspVerticalBar
{
	position: absolute;
	top: 0;
	right: 0;
    background: #2d2b29;
	height: 100%;
	border-left: 1px solid #4d4946;
	border-right: 1px solid #4d4946;
	width:16px;
}

.jspHorizontalBar
{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 16px;
	background: #000;
}

.jspVerticalBar *,
.jspHorizontalBar *
{
	margin: 0;
	padding: 0;
}

.jspCap
{
	display: none;
}

.jspHorizontalBar .jspCap
{
	float: left;
}

.jspTrack
{
	background: #474747;
	position: relative;

}

.jspDrag
{
	background: #2b2927;
	background: url('/img/scrollbar.png') no-repeat scroll 0 0 transparent;
	width: 16px;
	position: relative;
	top: 0;
	left: 0;
	cursor: pointer;
	/*border: 1px solid #4d4946;*/

}

/* info module lightbox body */
#lbarea-body .jspDrag
{
	background:  #474747;
	background: url('/img/scrollbar-small.png') no-repeat scroll 0 0 transparent;
	width: 16px;
	position: relative;
	top: 0;
	left: 0;
	cursor: pointer;
	/*border: 1px solid #4d4946;*/

}



.jspHorizontalBar .jspTrack,
.jspHorizontalBar .jspDrag
{
	float: left;
	height: 100%;
}

.jspArrow
{
	background:  #474747;
	text-indent: -20000px;
	display: block;
	cursor: pointer;
}

.jspArrow.jspDisabled
{
	cursor: default;
	background: #161616;
}

.jspVerticalBar .jspArrow
{
	height: 16px;
}

.jspHorizontalBar .jspArrow
{
	width: 16px;
	float: left;
	height: 100%;
}

.jspVerticalBar .jspArrow:focus
{
	outline: none;
}

.jspCorner
{
	background: #eeeef4;
	float: left;
	height: 100%;
}

.jspArrowUp{
	background: url('/img/jspArrowUp.png') no-repeat scroll 0 0 transparent;
}

.jspArrowDown{
	background: url('/img/jspArrowDown.png') no-repeat scroll 0 0 transparent;
}
/* Yuk! CSS Hack for IE6 3 pixel bug :( */
* html .jspCorner
{
	margin: 0 -3px 0 0;
}